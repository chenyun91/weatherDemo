<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:apps="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/base_bg_confirm_dialog"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_text_style_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="切换环境" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/common_bg_gray"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tv_prod_eu"
                        style="@style/common_text_style_large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_bg_text_select_default"
                        android:gravity="center"
                        android:text="欧洲" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="5dp"
                        android:background="@color/color_97A6BC" />

                    <TextView
                        android:id="@+id/tv_prod_zh"
                        style="@style/common_text_style_large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_bg_text_select_default"
                        android:gravity="center"
                        android:text="中国" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="5dp"
                        android:background="@color/color_97A6BC" />

                    <TextView
                        android:id="@+id/tv_test"
                        style="@style/common_text_style_large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_bg_text_select_default"
                        android:gravity="center"
                        android:text="测试" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/common_bg_gray"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tv_debug"
                        style="@style/common_text_style_large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_bg_text_select_default"
                        android:gravity="center"
                        android:text="开启Debug" />

                    <TextView
                        android:id="@+id/tv_upload"
                        style="@style/common_text_style_large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_bg_text_select_default"
                        android:gravity="center"
                        android:text="开启日志上传" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/common_bg_gray"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tv_Exit"
                        style="@style/common_text_style_large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/common_bg_text_select_default"
                        android:gravity="center"
                        android:text="保存退出" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </FrameLayout>
</layout>