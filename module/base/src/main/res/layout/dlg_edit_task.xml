<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:apps="http://schemas.android.com/tools">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/base_bg_confirm_dialog"
            android:paddingTop="24dp"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:textColor="@color/color_253746"
                android:maxWidth="250dp"
                android:textSize="14dp"
                apps:text="修改任务名称" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="244dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_97A6BC"
                android:background="@drawable/vehicle_edit_task_dialog_edittext_bg"
                android:textSize="14dp"
                android:paddingLeft="15dp"
                apps:text="现有的任务名称"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="112dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/base_bg_cancel"
                    android:gravity="center"
                    android:text="@string/common_cancel"
                    android:textColor="@color/color_97A6BC"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_sure"
                    android:layout_width="112dp"
                    android:layout_height="35dp"
                    android:background="@drawable/base_bg_sure"
                    android:gravity="center"
                    android:text="@string/common_confirm"
                    android:textColor="@color/base_color_white"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>