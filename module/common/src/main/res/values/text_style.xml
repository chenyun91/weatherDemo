<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_text_style_large">
        <item name="android:textColor">@color/color_253746</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="common_text_style_small">
        <item name="android:textColor">@color/color_97A6BC</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="common_text_with_board">
        <item name="android:textColor">@color/color_253746</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/common_bg_stroke_1_gray</item>
    </style>

    <style name="common_btn_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/common_btn_bottom_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">23dp</item>
        <item name="android:paddingBottom">23dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">18dp</item>

    </style>
</resources>